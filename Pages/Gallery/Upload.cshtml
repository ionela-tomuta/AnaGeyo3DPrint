@page
@model AnaGeyo3DPrint.Pages.Gallery.UploadModel
@{
    ViewData["Title"] = "Upload Project";
}

<h2>Încarcă un Proiect</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Nume Proiect</label>
        <input type="text" id="Name" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Description">Descriere</label>
        <textarea id="Description" name="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="File">Fișier 3D</label>
        <input type="file" id="File" name="File" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Încarcă</button>
</form>
